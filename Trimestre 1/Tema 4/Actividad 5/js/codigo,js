 // Seleccionamos el contenedor con el ID 'div1'
 let div1 = document.getElementById("div1");

 // Seleccionamos el primer <p> dentro de 'div1'
 let primerParrafo = div1.getElementsByTagName("p")[0];

 // Creamos un nuevo elemento <p>
 let nuevoParrafo = document.createElement("p");

 // AÃ±adimos el texto "reemplazado" al nuevo <p>
 nuevoParrafo.textContent = "reemplazado";

 // Reemplazamos el primer <p> con el nuevo <p>
 div1.replaceChild(nuevoParrafo, primerParrafo);